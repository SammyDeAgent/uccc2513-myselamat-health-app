<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/IVNews"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NewsHeading"
            android:layout_below="@+id/IVNews"
            android:text="Heading"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="3dp"
            android:maxLines="2"
            android:layout_margin="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NewsDateTime"
            android:layout_below="@+id/NewsHeading"
            android:text="Date"
            android:textStyle="bold"
            android:padding="3dp"
            android:maxLines="3"
            android:layout_margin="3dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/NewsSubHeading"
            android:layout_below="@+id/NewsDateTime"
            android:text="SubHeading"
            android:textStyle="bold"
            android:padding="3dp"
            android:maxLines="3"
            android:layout_margin="3dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>